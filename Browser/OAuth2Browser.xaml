<Window x:Class="OAuth2._0.Browser.OAuth2Browser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Sign in - OAuth 2.0 Authentication" 
        Height="720" 
        Width="1024"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="12,8">
                <TextBlock Text="🔒" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Secure Authentication" FontSize="14" VerticalAlignment="Center" Foreground="#495057"/>
            </StackPanel>
        </Border>

        <!-- WebView2 Browser -->
        <wv2:WebView2 x:Name="WebView" Grid.Row="1" NavigationStarting="WebView_NavigationStarting"/>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="0,1,0,0">
            <TextBlock x:Name="StatusText" Text="Connecting to authorization server..." 
                      FontSize="12" Margin="12,4" Foreground="#6c757d"/>
        </Border>
    </Grid>
</Window>